<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <servlet>
        <servlet-name>deployment</servlet-name>
        <servlet-class>com.mercury.service.DeploymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hash</servlet-name>
        <servlet-class>com.mercury.service.HashServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.mercury.service.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mercury.service.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.mercury.service.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>message</servlet-name>
        <servlet-class>com.mercury.service.MessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>log</servlet-name>
        <servlet-class>com.mercury.service.LogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>member</servlet-name>
        <servlet-class>com.mercury.service.MemberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>position</servlet-name>
        <servlet-class>com.mercury.service.PositionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>project</servlet-name>
        <servlet-class>com.mercury.service.ProjectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>role</servlet-name>
        <servlet-class>com.mercury.service.RoleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>stage</servlet-name>
        <servlet-class>com.mercury.service.StageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>template</servlet-name>
        <servlet-class>com.mercury.service.TemplateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>startup</servlet-name>
        <servlet-class>com.mercury.service.StartupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>type</servlet-name>
        <servlet-class>com.mercury.service.TypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>com.mercury.service.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deployment</servlet-name>
        <url-pattern>/deployment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hash</servlet-name>
        <url-pattern>/hash</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>message</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>log</servlet-name>
        <url-pattern>/log</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>member</servlet-name>
        <url-pattern>/member</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>position</servlet-name>
        <url-pattern>/position</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>project</servlet-name>
        <url-pattern>/project</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>role</servlet-name>
        <url-pattern>/role</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>stage</servlet-name>
        <url-pattern>/stage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>startup</servlet-name>
        <url-pattern>/startup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>template</servlet-name>
        <url-pattern>/template</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>type</servlet-name>
        <url-pattern>/type</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.mercury.filter.AuthorizedFilter</filter-class>
    </filter>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.mercury.filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/deployment</url-pattern>
        <url-pattern>/log</url-pattern>
        <url-pattern>/message</url-pattern>
        <url-pattern>/member</url-pattern>
        <url-pattern>/position</url-pattern>
        <url-pattern>/project</url-pattern>
        <url-pattern>/role</url-pattern>
        <url-pattern>/stage</url-pattern>
        <url-pattern>/template</url-pattern>
        <url-pattern>/type</url-pattern>
        <url-pattern>/user</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>startup</welcome-file>
    </welcome-file-list>
</web-app>